{% extends 'base.html.twig' %}

{% block title %}
	Publicaciones
{% endblock %}

{% block body %}
	<h1>Ultimas publicaciones</h1>
	{% for post in posts %}
		<h2>
			<a href="{{ path('app_post', {'slug': post.slug}) }}">
				{{ post.title }}
			</a>
		</h2>
		<p>
			<strong>{{ post.category.name }}</strong>
			-
			{{ post.comments|length }}
			comentarios
		</p>
	{% else %}
		<p>No hay publicaciones.</p>
	{% endfor %}
{% endblock %}
